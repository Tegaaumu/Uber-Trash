@model UberTrashInterface.Entities.LogIn

@{
    ViewData["Title"] = "LogIn";
    var Message = ViewBag.Message == null ? "" : ViewBag.Message;
}
<div class="fieldHeader">
        <form asp-action="LogIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@ViewBag.Message</div>
            <div class="label">
                <h3>LogIn</h3>
            <p>Welcome back! Login to access the Sweet Marketplace.</p>
            <p>Are you a seller? <a asp-controller="Home" asp-action="LogInUser">Seller</a></p>
            </div>
            <div class="connectField">
                @* <label asp-for="Username" class="control-label"></label> *@
                <input asp-for="Username" class="form-control" placeholder="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="passwordField">
                @* <label asp-for="Password" class="control-label"></label> *@
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="bsubmitField" />
            </div>
        </form>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
